<main class='main-dashboard'>
  <h2 class='dashboard-title'>Create A New Blog Post</h2>
  <hr />
  <form class='new-blog-form'>
    <div class='new-blog-title flex'>
      <label for='blog_title'>Title: </label>
      <input type='text' name='blog_title' required />
    </div>
    <div class='new-blog-body flex'>
      <label for='blog_body'>Body: </label>
      <textarea name='blog_body' required></textarea>
    </div>
    <div class='update-blog-btns flex'><button
        class='primary-button'
        type='submit'
      >Post Blog</button></div>
  </form>
</main>
<script src='/js/new-blog.js'></script>